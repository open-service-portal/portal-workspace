# GitHub token for Flux GitOps installation
# Create a token at: https://github.com/settings/tokens/new
# Required scopes: repo (all)
export GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Alternative: Flux-specific token (optional)
# export FLUX_GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

